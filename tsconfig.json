{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "es6",
            "es7",
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "inlineSourceMap": true,
        "outDir": "./dist/out",
        "paths": {
            "tests/*": [
                "./tests/*"
            ],
            "ui": [
                "./ui/index.ts"
            ],
            "ui/*": [
                "./ui/*"
            ],
            "job/*": [
                "./job/*"
            ],
            "db/*": [
                "./db/*"
            ],
            "server/*": [
                "./server/*"
            ],
            "shared/*": [
                "./shared/*"
            ],
            "main": [
                "./main/index.ts"
            ],
            "main/*": [
                "./main/*"
            ]
        },
        "baseUrl": "./src",
        "typeRoots": [
            "./node_modules/@types",
            "./typings/globals",
            "./typings/modules",
            "./typings/custom",
            "./typings"
        ],
        "types": [
            "../typings/custom/index"
        ]
    },
    "exclude": [
        "libs/**/*.*",
        "dist",
        "build",
        "target",
        "etc",
        "bin",
        ".awcache",
        ".happy**/*.*",
        "node_modules",
        "node_modules.disk"
    ]
    
}