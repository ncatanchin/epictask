{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"jsx": "react",
		"experimentalDecorators": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"epictask": ["./epictask/*"],
			"epictask/*": ["./epictask/*"],
			"components": ["./epictask/app/components/index.ts"],
			"components/*": ["./epictask/app/components/*"]

		}
	},
	"exclude": [
		"node_modules/**/*.*",
		"node_modules",
		"**/node_modules",
		"dist"
	]
}
