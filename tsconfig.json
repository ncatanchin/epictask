{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "es6",
            "es7",
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "pretty": true,
        "outDir": "./dist/out",
        "paths": {
            "*": [
                "*"
            ],
            "epic-electron": [
                "epic-global/Electron"
            ]
        },
        "baseUrl": "./packages",
        "typeRoots": [
            "./node_modules/@types",
            "./typings/epictask",
            "./typings/globals",
            "./typings/modules"
        ],
        
        "types": [
            "../typings/custom/index"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "libs/**/*.*",
        "typings/custom",
        "dist",
        "build",
        "target",
        "etc",
        "bin",
        ".awcache",
        ".happy**/*.*",
        "node_modules/**/*",
        "node_modules.disk"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "forkChecker": true,
        "useCache": true,
        "cacheDirectory": "dist/.awcache",
        "babelOptions": {
            "presets": [
                "es2016-node5",
                "stage-0",
                "react"
            ],
            "sourceMaps": "both",
            "plugins": [
                
            ],
            "env": {
                "development": {
                    "plugins": [["react-transform", {
                        "transforms": [{
                            "transform": "react-transform-hmr",
                            // if you use React Native, pass "react-native" instead:
                            "imports": ["react"],
                            // this is important for Webpack HMR:
                            "locals": ["module"]
                        }]
                        // note: you can put more transforms into array
                        // this is just one of them!
                    }]]
                }
            }
        }
    }
    
}