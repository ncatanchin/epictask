{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./src/",
		"paths": {
			"shared/*": ["./shared/*"],
			"main/*": ["./main/*"],
			"app/*": ["./app/*"]
		}
	},
	"exclude": [
		"node_modules/**/*.*",
		"node_modules",
		"**/node_modules",
		"dist"
	]
}
