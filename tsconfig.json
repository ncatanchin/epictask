{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"jsx": "react",
		"experimentalDecorators": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "dist/tsc",
		"baseUrl": "./src",
		"paths": {
			"epictask/*": [
				"./epictask/*"
			],
			"ui": [
				"./epictask/ui/index.ts"
			],
			"ui/*": [
				"./epictask/ui/*"
			],
			"shared": [
				"./epictask/shared/index.ts"
			],
			"shared/*": [
				"./epictask/shared/*"
			],
			"main": [
				"./epictask/main/index.ts"
			],
			"main/*": [
				"./epictask/main/*"
			],
			"components": [
				"./epictask/ui/components/index.ts"
			],
			"components/*": [
				"./epictask/ui/components/*"
			],
			"typestore": [
				"../../typestore/packages/typestore/src/index.ts"
			],
			"typestore-plugin-pouchdb": [
				"../../typestore/packages/typestore-plugin-pouchdb/src/index.ts"
			]
		}
	},
	"exclude": [
		"node_modules",
		"node_modules/**/*.*",
		"dist"
	]
}
