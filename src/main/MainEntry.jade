doctype html
html.fill-width.fill-height
	head
		meta(charset='utf-8')
		title GitOp
		if process.env.HOT
			base(href="http://localhost:4444")
		script.
			(function () {
				if (!process.env.HOT) {
					const link = document.createElement('link');
					link.rel = 'stylesheet';
					link.href = '../../dist/style.css';
					document.write(link.outerHTML);
				}
			}());

		style.
			.fill-height {
				height: 100vh;
				min-height: 100vh;
				max-height: 100vh;
			}

			.fill-width {
				width: 100vw;
				min-width: 100vw;
				max-width: 100vw;
			}

			html, body {
				margin: 0;
				padding: 0;
				border: 0;
			}


	body.fill-width.fill-height()
		#root.fill-width.fill-height
		script.
			(function () {
				const script = document.createElement('script');
				script.src = (process.env.HOT) ? 'http://localhost:4444/dist/AppEntry.js' : '../../dist/AppEntry.js';
				document.write(script.outerHTML);
			}());
