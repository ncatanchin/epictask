doctype html
html(lang="en")
	head
		style.
			body, html,img {
				overflow: hidden;
				width: 100vw;
				height: 100vh;
				min-height: 100vh;
				max-height: 100vh;
				pointer-events: none;
				background: transparent;
				padding: 0;
				border: 0;
				margin: 0;
			}

			img {
				object-fit: contain;
			}
	body
		img(src=require('../images/splash/splash-page.png'))