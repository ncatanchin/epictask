.output
  textarea
    border none
    resize none

  position absolute
  overflow auto
  z-index 101

  &.is-right
    right 0
    top 26px
    width 30%
    height calc(100% - 26px)

  &.is-bottom
    left 0
    bottom 0
    width 100%
    height 50%

  &.is-hidden
    display none

  .CodeMirror
    height 100%
    box-shadow none

  .CodeMirror.cm-s-solarized.cm-s-dark,
  .CodeMirror.cm-s-solarized.cm-s-dark .CodeMirror-gutters
    background-color #001E25

  .CodeMirror.cm-s-default,
  .CodeMirror.cm-s-default .CodeMirror-gutters
    background-color #F7F7F7

  .resize
    height 5px
    width 100%
    border-top 1px solid #A3A3A3
    background transparent
    cursor row-resize
    position absolute
    left 0
    top 0
    z-index 101

  &.is-right .resize
    height 100%
    width 5px
    border-left 1px solid #A3A3A3
    cursor col-resize

  &.is-bottom .resize
    height 5px
    width 100%
    border-top 1px solid #A3A3A3
    cursor row-resize
