doctype html
-
	var imgUrl = require('../images/splash/splash-page.png')

html(lang="en")
	head
		style.
			body, html,img {
				overflow: hidden;
				width: 100vw;
				height: 100vh;
				min-height: 100vh;
				max-height: 100vh;
				pointer-events: none;
				background: transparent;
				padding: 0;
				border: 0;
				margin: 0;
			}

			img {
				object-fit: contain;
			}
		script.
			window.$ = require('jquery')

			const Electron = require('electron')
			const img = document.createElement('img')
			img.src = "#{imgUrl}"
			img.onload = function() {
				let
					{width,height} = img

				console.log(`Loaded splash image`,img,width,height)
				Electron.ipcRenderer.send('splash-loaded',width,height)

				document.body.appendChild(img)
			}


	body
